{
   "name": "huima",
   "version": "1.0.0",
   "description": "Your Figma Plugin",
   "license": "",
   "author": "",
   "main": "code.js",
   "scripts": {
      "build": "concurrently \"npm:build:*\"",
      "build:figma": "pnpm -r --parallel run build",
      "build:jssj": "pnpm -r --parallel run build:jssj",
      "clean": "git clean -dfX",
      "dev": "concurrently \"npm:dev:*\"",
      "dev:figma": "pnpm -r --parallel run dev",
      "dev:jssj": "pnpm -r --parallel run dev:jssj",
      "format": "prettier '**/(*.{css,js,jsx,ts,tsx,md,mdx,vue,html}|package.json|tsconfig.json)' --write",
      "prepare": "husky install"
   },
   "devDependencies": {
      "concurrently": "^8.0.1",
      "husky": "^8.0.3",
      "lint-staged": "^13.1.2",
      "prettier": "^2.8.3",
      "prettier-plugin-organize-imports": "^3.2.2",
      "prettier-plugin-packagejson": "^2.4.0"
   }
}
