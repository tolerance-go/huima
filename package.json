{
   "name": "huima",
   "version": "1.0.0",
   "description": "Your Figma Plugin",
   "license": "",
   "author": "",
   "main": "code.js",
   "scripts": {
      "build:admin": "cd packages/admin && npm run build:admin",
      "build:plugin": "pnpm -r run build:plugin",
      "build:plugin:jssj": "pnpm -r run build:plugin:jssj",
      "changeset": "changeset",
      "changeset:publish": "pnpm build && echo 'skip changeset publish' && git push --follow-tags --no-verify",
      "changeset:version": "changeset version",
      "clean": "git clean -dfX",
      "dev:admin": "cd packages/admin && npm run dev:admin",
      "dev:plugin": "pnpm -r --parallel run dev",
      "dev:plugin:jssj": "pnpm -r --parallel run dev:plugin:jssj",
      "format": "prettier '**/(*.{css,js,jsx,ts,tsx,md,mdx,vue,html}|package.json|tsconfig.json)' --write",
      "prepare": "husky install"
   },
   "devDependencies": {
      "@changesets/cli": "^2.26.0",
      "concurrently": "^8.0.1",
      "husky": "^8.0.3",
      "lint-staged": "^13.1.2",
      "prettier": "^2.8.3",
      "prettier-plugin-organize-imports": "^3.2.2",
      "prettier-plugin-packagejson": "^2.4.0"
   }
}
